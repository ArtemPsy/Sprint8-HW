<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sprint9" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="MainScreenTheme" parent="Theme.Sprint9">
        <item name="android:background">@color/backgroundBlue</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="SecondaryScreens" parent="Theme.Sprint9">
        <item name="android:background">@color/backgroundWhite</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="SettingsScreenTheme" parent="SecondaryScreens">
        <item name="android:trackTint">@color/switchLightGray</item>
        <item name="android:thumbTint">@color/switchTextGray</item>
        <item name="android:checked">false</item>
    </style>

    <style name="secondaryToolbars" parent="SecondaryScreens">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="greyFieldWater" parent="Theme.Sprint9">
        <item name="android:background">@drawable/rounded_corners_light</item>
    </style>

    <style name="searchIconsTheme" parent="greyFieldWater">
        <item name="android:backgroundTint">@color/backgroundLightGray</item>
        <item name="android:tint">@color/text_gray</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal_12</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="searchTextFieldTheme" parent="searchIconsTheme">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>